{
    "include": ["src", "def.d.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "dist",
        "sourceMap": true,
        "module": "CommonJS",
        "target": "ES2019",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}